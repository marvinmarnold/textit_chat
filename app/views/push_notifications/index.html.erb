<h1>Listing Push Notifications</h1>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @push_notifications.each do |push_notification| %>
      <tr>
        <td><%= push_notification.tag %></td>
        <td><%= push_notification.message %></td>
        <td><%= link_to 'Show', push_notification, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_push_notification_path(push_notification), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', push_notification, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Push notification', new_push_notification_path, class: "btn btn-success" %>
