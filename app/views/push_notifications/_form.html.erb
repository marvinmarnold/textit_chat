<%= form_for(@push_notification, html: { role: "form", class: "form-horizontal"}) do |f| %>
  <% if @push_notification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@push_notification.errors.count, "error") %> prohibited this push_notification from being saved:</h2>

      <ul>
      <% @push_notification.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :tag, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:tag, push_notification_tags, {include_blank: 'Select tag'}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :message, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :message, type: "text", class: "form-control", placeholder: "Message to send", rows: "3" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
