<h1>Listing Follow-up Questions</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Language</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @follow_up_questions.each do |follow_up_question| %>
      <tr>
        <td><%= follow_up_question.question %></td>
        <td><%= follow_up_question.locale %></td>
        <td><%= link_to 'Show', follow_up_question, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_follow_up_question_path(follow_up_question), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', follow_up_question, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Follow up question', new_follow_up_question_path, class: "btn btn-success" %>
