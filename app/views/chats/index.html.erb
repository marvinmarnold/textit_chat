<%= render 'shared/navbar' %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3">
      <h3>Subscribed chats</h3>

      <ul class="list-group">
        <% @chats.each do |chat| %>
          <%= content_tag "a", href: url_for(chat_id: chat.id), class: "chat-entry" do %>
            <li class="list-group-item">
              <span class="badge"><%= current_user.unread_messages(chat).size %></span>
              <%= chat.name %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-9">
      <% if @chat %>
        <%= render 'chats/show' %>
      <% else %>
        <h1>Select a chat on the left</h1>
      <% end %>
    </div>
  </div>
</div>
