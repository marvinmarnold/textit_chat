<%= form_for(@message, html: {class: "form-horizontal", role: "form"}) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="faqs" data-toggle="dropdown" aria-expanded="true">
          FAQs
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="faqs">
          <% @faqs.each do |faq| %>
            <li role="presentation"><%= link_to faq, url_for_template(@chat, faq, @follow), role: "menuitem", tabindex: "-1"%></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md-6">
      <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="faqs" data-toggle="dropdown" aria-expanded="true">
          Follow-up Question
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="faqs">
          <% @follows.each do |follow| %>
            <li role="presentation"><%= link_to follow, url_for_template(@chat, @faq, follow), role: "menuitem", tabindex: "-1"%></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <br/>

  <div class="row">
    <div class="col-sm-11">
      <div class="form-group">
        <%= f.text_area :message, value: message_value(@faq, @follow), placeholder: message_placeholder(@faq, @follow), class: "form-control", rows: "6" %>
        <%= hidden_field_tag 'message[to]', @chat.name %>
      </div>
    </div>
  </div>
  <div class="row">
    <%= f.submit "Send message", class: "btn btn-lg btn-info" %>
  </div>

<% end %>