<div class="container-fluid">
  <div class="jumbotron" style="background:transparent !important">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="row"><h2 class='text-center'>Forgot your password?</h2></div>


          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal", role: "form" }) do |f| %>
          <br/><br/>
            <%= devise_error_messages! %>

            <div class="row">
              <div class="form-group">
                <%= f.label :email, class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>
              </div>
            </div>

            <br/>
            <div class="row">
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-info btn-block" %>
                </div>
              </div>
            </div>

          <% end %>

          <div class="row">
            <div class="col-sm-offset-2 col-sm-10">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>