<div class="container-fluid">
  <div class="jumbotron" style="background:transparent !important">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="row"><h2 class='text-center'>Log in</h2></div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal", role: "form"}) do |f| %>
        <br/><br/><br/>
          <div class="row">
            <div class="form-group">
              <%= f.label :email, class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <%= f.label :password, class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="row">
              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <div class="checkbox">
                    <label>
                      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                    </label>
                  </div>
                </div>
              </div>
            </div>
          <% end -%>

          <br/><br/>
          <div class="row">
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Log in", class: "btn btn-lg btn-info btn-block" %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="col-sm-offset-2 col-sm-10">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>