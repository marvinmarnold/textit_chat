<%= form_for(@faq, html: { role: "form", class: "form-horizontal"}) do |f| %>
  <% if @faq.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@faq.errors.count, "error") %> prohibited this faq from being saved:</h2>

      <ul>
      <% @faq.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :question, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :question, type: "text", class: "form-control", placeholder: "Question", rows: "2" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :answer, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :answer, type: "textarea", class: "form-control", placeholder: "Answer", rows: "3" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
