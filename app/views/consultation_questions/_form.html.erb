<%= form_for(@consultation_question, html: { role: "form", class: "form-horizontal"}) do |f| %>
  <% if @consultation_question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@consultation_question.errors.count, "error") %> prohibited this consultation_question from being saved:</h2>

      <ul>
      <% @consultation_question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :preview, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :preview, type: "textarea", class: "form-control", placeholder: "Preview", rows: "3" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :question, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :question, type: "text", class: "form-control", placeholder: "Question", rows: "2" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :locale, "Language", class: "col-sm-2 control-label" %>
    <%= f.select :locale, locale_array, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
