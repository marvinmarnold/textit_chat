<h1>Listing Users</h1>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Admin?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', user, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-success" %>
